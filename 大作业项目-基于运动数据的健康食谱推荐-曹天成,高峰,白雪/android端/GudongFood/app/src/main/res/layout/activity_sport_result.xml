<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".jerome.gudongfood.view.SportResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@mipmap/sport_result"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咕咚运动为你推荐食谱啦！"
            android:id="@+id/recommendTextView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击查看"
            android:id="@+id/seeMenuButton"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignBaseline="@+id/recommendTextView"
            android:layout_alignBottom="@+id/recommendTextView"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
